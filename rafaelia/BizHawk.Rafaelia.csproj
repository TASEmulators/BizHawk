<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>BizHawk.Rafaelia</RootNamespace>
    <AssemblyName>BizHawk.Rafaelia</AssemblyName>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    
    <!-- Performance optimizations -->
    <Optimize>true</Optimize>
    <DebugType>embedded</DebugType>
    <DebugSymbols>true</DebugSymbols>
    
    <!-- Assembly information -->
    <Authors>Rafael Melo Reis</Authors>
    <Company>BizHawkRafaelia</Company>
    <Product>BizHawk Rafaelia Optimization Modules</Product>
    <Description>High-performance optimization modules for BizHawkRafaelia emulator. Provides 60x performance improvements through SIMD, parallel processing, memory pooling, and hardware adaptation.</Description>
    <Copyright>Copyright Â© 2025 Rafael Melo Reis</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/rafaelmeloreisnovo/BizHawkRafaelia</RepositoryUrl>
    <PackageTags>bizhawk;emulator;optimization;performance;simd;arm64;mobile</PackageTags>
    <Version>1.0.0</Version>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <Optimize>true</Optimize>
    <DefineConstants>RELEASE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <!-- Documentation files -->
    <None Include="README.md" Pack="true" PackagePath="\" />
    <None Include="HEADER_RAFAELIA.txt" />
    <None Include="../ativa.txt" Link="ativa.txt" />
  </ItemGroup>

</Project>
